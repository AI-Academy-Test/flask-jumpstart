{
  "name": "Flask Starter",
  "build": {
    "dockerfile": "Dockerfile",
  },
  "forwardPorts": [5001],
  "postCreateCommand": "bash .devcontainer/setup-environment.sh",
  "hostRequirements": {
    "memory": "16gb",
  },
  "runArgs": [
    "--mount",
    "type=volume,target=/workspace/.idea",
    "--mount",
    "type=volume,target=/workspace/venv"
  ],
  "workspaceFolder": "/workspace",
}
