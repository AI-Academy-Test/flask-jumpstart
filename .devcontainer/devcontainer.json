{
  "name": "Flask Starter",
  "build": {
    "dockerfile": "Dockerfile",
  },
  "forwardPorts": [5001],
  "postCreateCommand": "bash .devcontainer/setup-environment.sh",
  "secrets": {
    "OPEN_AI_API_KEY": {
      "description": "API key for OpenAI",
      "documentationUrl": "https://help.openai.com/en/articles/4936850-where-do-i-find-my-openai-api-key"
    }
  },
  "hostRequirements": {
    "memory": "16gb",
  },
  "runArgs": [
    "--mount",
    "type=volume,target=/workspace/.idea",
    "--mount",
    "type=volume,target=/workspace/venv"
  ],
  "workspaceFolder": "/workspace",
}
